import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0){
		    int x=sc.nextInt();
		    int y=sc.nextInt();
		    if(x<6){
		        System.out.println(y);
		    }
		    else{
		        int rem=x%6;
		        int qst=x/6;
		        if(rem==0){
		            System.out.println(qst*y);
		        }
		        else{
		            System.out.println((qst*y)+y);
		        }
		        
		        
		    }
		}

	}
}
